<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color_two"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Proxy_main_activity" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:background="@drawable/custom_btn_arsenic"
        android:gravity="center_horizontal"
        android:padding="20dp" >

         <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingBottom="0dp"            
            android:src="@drawable/masts2_250" />
    </LinearLayout>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/black_button"        
        android:orientation="vertical"
        android:padding="10dp">
       

         <EditText
             android:id="@+id/ClientIP"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/longform"
             android:layout_alignRight="@+id/longform"
             android:layout_below="@+id/longform"
             android:layout_marginTop="45dp"
             android:drawableRight="@drawable/pin_sq_left_icon_24"
             android:ems="10"
             android:hint="set ip"
             android:imeOptions="@+id/ClientPort"
             android:inputType="textPersonName"
             android:textColor="#bbbbbb"
             android:textColorHint="#7E7E7E" />

         <TextView
             android:id="@+id/longform"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="15dp"
             android:background="@drawable/black_button_new"
             android:gravity="center_horizontal"
             android:paddingBottom="15dp"
             android:text="Set Server IP and Port"
             android:textColor="#bbbbbb"
             android:textSize="14dp"
             android:textStyle="bold" />

         <EditText
             android:id="@+id/ClientPort"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/ClientIP"
             android:layout_alignRight="@+id/ClientIP"
             android:layout_below="@+id/ClientIP"
             android:layout_marginTop="36dp"
             android:drawableRight="@drawable/pin_sq_left_icon_24"
             android:ems="10"
             android:hint="port"
             android:inputType="textPersonName"
             android:textColor="#bbbbbb"
             android:textColorHint="#7E7E7E" >

             <requestFocus />
         </EditText>

         <Button
             android:id="@+id/submitBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/ClientPort"
             android:layout_below="@+id/ClientPort"
             android:layout_marginLeft="26dp"
             android:layout_marginTop="30dp"
             android:background="@drawable/custom_btn_arsenic"
             android:text="Submit"
             android:textColor="#bbbbbb"
             android:textStyle="bold"
             android:width="90dp" />

         <Button
             android:id="@+id/cancelBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/submitBtn"
             android:layout_alignBottom="@+id/submitBtn"
             android:layout_alignRight="@+id/ClientPort"
             android:layout_marginRight="20dp"
             android:background="@drawable/custom_btn_arsenic"
             android:text="Cancel"
             android:textColor="#bbbbbb"
             android:textStyle="bold"
             android:width="90dp" />
         
         </RelativeLayout>
</RelativeLayout>